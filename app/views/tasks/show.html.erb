<h1> <%= @task.title %> </h1>
<p> <%= @task.details %></p>
<p> <% @task.completed %></p>


<div class="container">
 <div class="button">
  <%= link_to "Return to list", tasks_path %>
 </div>
 <div class="button">
  <%= link_to "Edit the Task", edit_task_path %>
 </div>
 <div class="button">
  <%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  </div>
</div>
