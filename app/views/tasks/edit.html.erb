<h1>Edit a task</h1>
<hr>
<div class="container">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>
  <hr>
  <div class="button">
  <%= link_to "Return to list", tasks_path %>
  </div>
</div>
