<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%if task.completed? %>
        <i class="fa-solid fa-square-check"></i>
        <% else %>
        <i class="fa-regular fa-square-check"></i>
        <% end %>
      <%= link_to task.title, task_path(task[:id]) %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
