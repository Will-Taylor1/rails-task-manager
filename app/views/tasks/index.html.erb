<h1>My Tasks</h1>
<hr>
<div class="container">
  <ul class="list">
    <% @tasks.each do |task| %>
      <li>
        <%if task.completed? %>
          <i class="fa-solid fa-square-check"></i>
          <% else %>
          <i class="fa-regular fa-square-check"></i>
          <% end %>
        <%= link_to task.title, task_path(task[:id]) %>
        <%= link_to raw('<i class="fa-solid fa-trash-can fa-spin"></i>'), task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>
 <hr>
  <div class="button">
  <p class="btn-press"><%= link_to "Add a new task", new_task_path %></p>
  </div>
</div>
